# ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
# [Descrição]:
#   Arquivo onde fica as configurações globais do git
#
# Links úteis:
#   Documentação [https://git-scm.com/docs/git-config]
# ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

# Credenciais
# --------------------------------------------
[include]
    # Use arquivos separados para username, credentials, etc
    path = ~/.gitconfig.local


# editor
# --------------------------------------------
[core]
	editor = vim


# Cores
# --------------------------------------------
[color "branch"]
  current = blue bold
  local = green bold
  remote = red bold

[color "decorate"]
	HEAD = reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

# Alias
# --------------------------------------------
[alias]
  visual = !gitk
  progress = diff --stat
  pg = diff --shortstat


# Merge
# --------------------------------------------
[merge]
    tool = meld

[mergetool "meld"]
    cmd = meld --auto-merge "\"$LOCAL\" \"$BASE\" \"$REMOTE\" --output \"$MERGED\" --label \"MERGE (REMOTE BASE MY)\""
    trustExitCode = false

[mergetool]
    # don't ask if we want to skip merge
    prompt = false

    # don't create backup *.orig files
    keepBackup = false


# Diff
# --------------------------------------------
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "\"$LOCAL\" \"$REMOTE\" --label \"DIFF (ORIGINAL MY)\""


# Outras configurações
# --------------------------------------------
[push]
	# http://git-scm.com/docs/git-config.html, search push.default
	# default = current  # Git 1.x
	default = simple  # Git 2.x

[http]
	sslVerify = false

[credential]
	helper = cache
