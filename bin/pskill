#!/bin/bash

# ##############################################################################
# [Descrição]:
# Comando para matar um processo de forma mais fácil.
#
# Uso:
# pskill <nome_do_processo>
# ##############################################################################

nome_do_processo=$1

pid=$(ps -ax | grep $nome_do_processo | grep -v grep | awk '{ print $1 }')
echo -n "killing $nome_do_processo..."
kill -9 $pid
echo "process $pid"
echo "$nome_do_processo morto!"
